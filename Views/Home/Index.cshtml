@using newsletter.Models
@model Usuario
@{
    ViewData["Title"] = "Home Page";
}

<h2>Cadastro Newsletter</h2>
<form asp-action="Cadastro" method="POST">
    <p>
        <label asp-for="Nome">Nome:</label>
        <input asp-for="Nome"/>
    </p>
    <p>
        <label asp-for="Email">Emai:</label>
        <input asp-for="Email"/>
    </p>
    <p>
        <label asp-for="Genero">Genero:</label>
        <input asp-for="Genero" type="radio" value="M"/>Masculino
        <input asp-for="Genero" type="radio" value="F"/>Feminino
    </p>
    <input type="submit" value="Cadastrar"/>





</form>